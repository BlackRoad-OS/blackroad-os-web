{
  "$schema": "https://railway.app/railway.schema.json",
  "project": "blackroad-web",
  "services": [
    {
      "name": "web-app",
      "buildCommand": "npm run build",
      "startCommand": "npm run start",
      "port": 3000,
      "envVariables": {
        "NODE_ENV": {
          "required": true
        },
        "CORE_API_URL": {
          "required": true
        },
        "PUBLIC_APP_URL": {
          "required": true
        },
        "NEXT_PUBLIC_CORE_API_URL": {
          "required": true
        },
        "NEXT_PUBLIC_APP_URL": {
          "required": true
        }
      }
    }
  ]
}
